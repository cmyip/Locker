<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.Locker.FullscreenContainer"
    tools:context=".LandingPAge">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_icons8_settings_50"
        android:background="@android:color/transparent"
        android:onClick="settingsLogin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/image_1" />
        <TextView
            android:id="@+id/lblLocker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lbl_landing_page"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="631dp"
            android:layout_height="138dp"
            android:layout_below="@+id/lblLocker"
            android:text="@string/btn_start"
            android:textSize="40dp"
            android:onClick="scanCard"
            app:cornerRadius="90dp"
            android:layout_marginTop="50dp"
            />



    </LinearLayout>


</FrameLayout>